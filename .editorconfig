# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space

# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.{php,py}]
indent_size = 4

# 2 space indentation
[*.{css,html,js,json,sh,yml,yaml}]
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

